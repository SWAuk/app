<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".controller.CompetitionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type"
        android:id="@+id/typeTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeSpinner"
        android:spinnerMode="dropdown"
        android:layout_alignBaseline="@+id/typeTextView"
        android:layout_alignBottom="@+id/typeTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:entries="@array/competition_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Length (min)"
        android:id="@+id/lengthTextView"
        android:layout_below="@+id/typeTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/lengthEditText"
        android:layout_alignBottom="@+id/lengthTextView"
        android:layout_alignEnd="@+id/typeSpinner"
        android:layout_alignStart="@+id/typeSpinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Heat"
        android:id="@+id/heatTextView"
        android:layout_below="@+id/lengthTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heatSpinner"
        android:spinnerMode="dropdown"
        android:layout_alignBaseline="@+id/heatTextView"
        android:layout_alignBottom="@+id/heatTextView"
        android:layout_alignTop="@+id/heatTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:entries="@array/competition_heat" />


